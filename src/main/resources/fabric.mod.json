{
  "schemaVersion": 1,
  "id": "lakeside",
  "version": "$version",

  "name": "Lakeside",
  "description": "A revamp of Minecraft's lakes.",
  "authors": [
    "Juuz"
  ],
  "contact": {
    "homepage": "https://github.com/Juuxel/Lakeside",
    "sources": "https://github.com/Juuxel/Lakeside",
    "issues": "https://github.com/Juuxel/Lakeside/issues"
  },

  "license": "LGPL-3.0-only",
  "icon": "assets/lakeside/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [{
      "value": "juuxel.lakeside.Lakeside",
      "adapter": "kotlin"
    }]
  },
  "mixins": [
    "mixins.lakeside.json"
  ],

  "depends": {
    "fabricloader": ">=0.8.8" ,
    "minecraft": ">=1.16.1",
    "fabric": "*",
    "fabric-language-kotlin": "^1.3.72",
    "terraform": "^2.1.7"
  },
  "suggests": {
    "ltr": "*"
  }
}
